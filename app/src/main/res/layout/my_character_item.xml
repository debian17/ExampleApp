<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#e8eaf6"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/imgMyCharacter"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:src="@drawable/stub"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMyCharacterName"
                android:layout_below="@id/imgMyCharacter"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:text="ИМЯ ГЕРОЯ"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMyCharacterSuperPower"
                android:layout_below="@id/tvMyCharacterName"
                android:text="много букв описания супер силы персонажа"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMyCharacterSuperPower"
                android:id="@+id/btnEditMyCharacter"
                android:text="@string/edit_my_character"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeleteMyCharacter"
                android:layout_below="@id/tvMyCharacterSuperPower"
                android:layout_toRightOf="@id/btnEditMyCharacter"
                android:text="@string/delete_my_character"
                android:layout_marginLeft="12dp"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>